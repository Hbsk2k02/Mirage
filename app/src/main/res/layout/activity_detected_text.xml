<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetectedText">

    <ImageView
        android:id="@+id/idBackButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/backbutton"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">
    </ImageView>

    <TextView
        android:id="@+id/idDetectedText"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/lightblue"
        android:gravity="center"
        android:text="Detected Text"
        android:textAlignment="center"
        android:textColor="@color/bluebell"
        android:textSize="20dp"></TextView>

    <ImageView
        android:id="@+id/idTextToAudio"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="660dp"
        android:background="@drawable/floatbuttonshape"
        android:padding="10dp"
        android:src="@drawable/audiobutton"></ImageView>

</RelativeLayout>